{
  "manifest_version": 3,
  "name": "Job App Filler",
  "description": "Smart Autofill for Annoying Job Sites",
  "version": "1.0",
  "action": {
    "default_icon": "logo.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://*.wd1.myworkdayjobs.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/*.js"
      ],
      "matches": [
        "https://*.wd1.myworkdayjobs.com/*"
      ]
    }
  ]
}